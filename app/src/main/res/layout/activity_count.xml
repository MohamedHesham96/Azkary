<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"                android:background="#ffffff"    tools:context="com.example.h.azkary.CountActivity">    <TextView        android:textStyle="bold"        android:layout_marginTop="15dp"        android:textSize="20dp"        android:layout_marginLeft="45dp"        android:text="العدد السابق"        android:layout_width="wrap_content"        android:layout_height="wrap_content"/>    <TextView        android:textStyle="bold"        android:layout_marginRight="55dp"        android:layout_alignParentRight="true"        android:layout_marginTop="15dp"        android:textSize="20dp"        android:text="العدد الأن"        android:layout_width="wrap_content"        android:layout_height="wrap_content"/>    <TextView        android:textColor="#FFCA28"        android:background="@drawable/countback2"        android:layout_marginTop="45dp"        android:textSize="26dp"        android:textAlignment="center"        android:layout_alignParentTop="true"        android:paddingTop="8dp"        android:text="9999"        android:textStyle="bold"        android:id="@+id/oldCount"        android:layout_width="wrap_content"        android:layout_height="wrap_content" />    <TextView        android:textStyle="bold"        android:background="@drawable/countback2"        android:textSize="26dp"        android:textColor="#DD2C00"        android:paddingTop="8dp"        android:textAlignment="center"        android:text="9999"        android:id="@+id/totalCount"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignTop="@+id/oldCount"        android:layout_alignParentEnd="true"        android:layout_alignParentRight="true"/>    <Button        android:typeface="monospace"        android:onClick="count"        android:text="0"        android:textColor="#FF8F00"        android:textSize="50dp"        android:background="@drawable/circle"        android:layout_centerHorizontal="true"        android:id="@+id/countButton"        android:layout_marginTop="25dp"        android:layout_width="300dp"        android:layout_height="290dp"        android:layout_below="@+id/oldCount"/>    <TextView        android:paddingTop="22.5dp"        android:background="@drawable/islam3"        android:textAlignment="center"        android:layout_centerInParent="true"        android:layout_below="@id/countButton"        android:id="@+id/zekrName"        android:layout_marginTop="20dp"        android:textSize="25dp"        android:textStyle="bold"        android:text="  اسم الذكر  "        android:layout_width="320dp"        android:layout_height="75dp" />    <Button        android:background="@drawable/save"        android:onClick="save"        android:layout_alignParentBottom="true"        android:textSize="30dp"        android:layout_centerInParent="true"        android:text="  حفظ  "        android:id="@+id/saveButton"        android:layout_marginBottom="10dp"        android:layout_width="150dp"        android:layout_height="80dp" />    <ToggleButton        android:id="@+id/fav_TB"        android:textOff=""        android:textOn=""        android:layout_marginRight="10dp"        android:layout_marginBottom="15dp"        android:layout_alignParentRight="true"        android:layout_alignParentBottom="true"        android:background="@drawable/selector"        android:layout_width="52dp"        android:layout_height="52dp"/>    <Button        android:id="@+id/edit_B"        android:background="@android:drawable/ic_menu_edit"        android:onClick="edit"        android:layout_alignParentBottom="true"        android:textSize="30dp"        android:layout_toRightOf="@+id/default_B"        android:layout_marginLeft="70dp"        android:layout_marginBottom="15dp"        android:layout_width="40dp"        android:layout_height="40dp" />    <Button        android:id="@+id/delete_B"        android:background="@drawable/delete_icon2"        android:onClick="delete"        android:textSize="30dp"        android:layout_width="50dp"        android:layout_height="50dp"        android:layout_alignBottom="@+id/edit_B"        android:layout_alignLeft="@+id/zekrName"        android:layout_alignStart="@+id/zekrName"/></RelativeLayout>