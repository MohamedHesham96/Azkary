<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:background="@drawable/cover"
    tools:context="com.example.h.azkary.AddNewZekrActivity">



    <TextView

        android:text="Old Zekr Name"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/oldzekrName_TV"
        android:textColor="#aa00aa"
        android:textColorHint="#616161"
        android:textSize="25dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>


    <EditText
        android:layout_below="@+id/oldzekrName_TV"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/zekrName"
        android:textColor="#EF6C00"
        android:textColorHint="#616161"
        android:hint="  ادخل الاسم الجديد"
        android:textSize="25dp"
        android:layout_width="290dp"
        android:layout_height="60dp"/>


    <Button

        android:background="@drawable/check__icon3"
        android:id="@+id/done"
        android:onClick="editName"
        android:textSize="25dp"
        android:layout_marginTop="19dp"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/zekrName"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
